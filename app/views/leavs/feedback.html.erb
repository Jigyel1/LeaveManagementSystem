 <div class="cotainer" style="margin-top:5%;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                    <div class="card" style="padding-left:5%;">
                        <div class="card-body">
                        <h2 style="text-align:center;">Provide Feedback</h2>
                        <hr>
                        <br>
                        <%= form_with(model: @leav) do |form| %>
                                <div class="form-group row">
                                    <label for="feedback" class="col-md-4 col-form-label">Feedback</label>
                                    <div class="col-md-15">
                                      <%= form.rich_text_area :feedback, id: "feedback", class: "form-control" %>
                                    </div>
                                </div><br>

                                    <div class="col-md-6 offset-md-4" style="text-align: center;">
                                            <%= form.submit "Provide Feedback", class: "btn btn-primary", style: "width:250px;" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
            </div>
        </div>
    </div>