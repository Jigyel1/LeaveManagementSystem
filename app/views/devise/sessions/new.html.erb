<div class="bg-image shadow-2-strong">
      <div class="mask d-flex align-items-center h-100">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-xl-5 col-md-8">
            <div class= "bg-white  rounded-5 shadow-5-strong p-5" style= "margin-top:15%;box-shadow: 0px 8px 14px -2px rgba(0, 0, 0, 0.75); -webkit-box-shadow: 0px 8px 14px -2px rgba(0, 0, 0, 0.75); -moz-box-shadow: 0px 8px 14px -2px rgba(0, 0, 0, 0.75);" >
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <h2 style="text-align:center;">Log In</h2><br>
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example1">Email address</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "form1Example1" %>
                </div>
                <!-- Password input -->
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example2">Password</label>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "form1Example2" %>
                </div>

                <!-- 2 column grid layout for inline styling -->
                <div class="row mb-4">
                  <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <% if devise_mapping.rememberable? %>
                    <div class="form-check">
                     <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                    <% end %>
                  </div>

                  <div class="col text-center">
                    <!-- Simple link -->
                    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
                  </div>
                </div>

                <!-- Submit button -->
                <div style="text-align:center;">
                <%= f.submit "Log in", class: "btn btn-primary", style: "width:250px;" %>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
