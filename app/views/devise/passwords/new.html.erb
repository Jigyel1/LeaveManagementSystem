<div class="bg-image shadow-2-strong">
      <div class="mask d-flex align-items-center h-100">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-xl-5 col-md-8">
            <div class= "bg-white  rounded-5 shadow-5-strong p-5" style= "margin-top:15%;box-shadow: 0px 8px 14px -2px rgba(0, 0, 0, 0.75); -webkit-box-shadow: 0px 8px 14px -2px rgba(0, 0, 0, 0.75); -moz-box-shadow: 0px 8px 14px -2px rgba(0, 0, 0, 0.75);" >
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                    <h2 style="text-align:center;">Forgot your password?</h2><br>
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label" for="form1Example1">Email address</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "form1Example1" %>
                </div>
          
                <div style="text-align:center;">
                <%= f.submit "Send me reset password instructions ", class: "btn btn-primary", style: "width:290px;" %>
                </div>
              <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
